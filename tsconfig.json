{
    "compilerOptions": {
		"module": "CommonJS",
		"target": "es2015",
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"listEmittedFiles": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		// "noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"sourceMap": true,
		"outDir": "dist",
	},
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
	],
}